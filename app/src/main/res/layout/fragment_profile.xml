<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Profile">

    <TextView
        android:id="@+id/txtProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="32dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/profileImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/txtProfile"
        android:layout_centerInParent="true"
        android:background="@drawable/profile" />
    <TextView
        android:id="@+id/nameProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Burhanuddin Zain"
        android:layout_below="@id/profileImg"
        android:textAlignment="center"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:letterSpacing="0.025"/>
    <TextView
        android:id="@+id/emailProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="zainburhanuddin12@gmail.com"
        android:textAlignment="center"
        android:layout_below="@id/nameProfile"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/deskripsiProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailProfile"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X - PPLG 1"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMK Raden Umar Said"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginStart="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/deskripsiProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnLogout"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Log Out"
            android:background="@drawable/bgbutton"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</RelativeLayout>